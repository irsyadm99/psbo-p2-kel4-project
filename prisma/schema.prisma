// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  // Attributes
  id        Int      @id @default(autoincrement())
  firstName String
  lastName  String
  email     String
  password  String
  // reference
  profile   Profile?
}

model Profile {
  // Attributes
  id                 Int    @id @default(autoincrement())
  deskripsiDiri      String
  pekerjaan          String
  suku               String
  pendidikanTerakhir String
  domisili           String
  statusPernikahan   String
  Hobi               String
  karakterPositif    String
  karakterNegatif    String
  // reference
  user               User   @relation(fields: [profileId], references: [id])
  profileId          Int // relation scalar field (used in the `@relation` attribute above)
}

// Dummy
model Admin {
  id       Int    @id @default(autoincrement())
  userName String
  password String
}
